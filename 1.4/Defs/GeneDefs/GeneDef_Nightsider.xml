<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Nightsider: Enhanced Senses -->
    <GeneDef ParentName="BEWH_Nightsider">
        <defName>BEWH_NightsiderEnhancedSenses</defName>
        <label>enhanced senses</label>
        <description>Carriers of this gene have enhanced auditory and olfactory senses allowing them to see and hear better in both darkness and light.</description>
        <iconPath>UI/Genes/EnhancedSenses</iconPath>
        <biostatCpx>2</biostatCpx>
        <biostatMet>-2</biostatMet>
        <displayOrderInCategory>51</displayOrderInCategory>
        <ignoreDarkness>true</ignoreDarkness>
        <capMods>
            <li>
                <capacity>Hearing</capacity>
                <offset>0.2</offset>
            </li>
            <li>
                <capacity>Sight</capacity>
                <offset>0.2</offset>
            </li>
        </capMods>
        <forcedTraits>
            <li>
                <def>Undergrounder</def>
            </li>
        </forcedTraits>
    </GeneDef>
    <!-- Nightsider: Otherwordly -->
    <GeneDef ParentName="BEWH_Nightsider">
        <defName>BEWH_NightsiderOtherwordly</defName>
        <label>otherwordly</label>
        <description>Carriers of this gene looks very different compared to other species and as such are distrusted by others.</description>
        <iconPath>UI/Genes/Otherwordly</iconPath>
        <biostatCpx>1</biostatCpx>
        <biostatMet>2</biostatMet>
        <displayOrderInCategory>52</displayOrderInCategory>
        <customEffectDescriptions>
            <li>Other pawns opinion of this pawn is decreased</li>
        </customEffectDescriptions>
    </GeneDef>

</Defs>